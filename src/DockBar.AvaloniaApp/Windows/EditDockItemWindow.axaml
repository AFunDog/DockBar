                    <!--                 </ComboBox> -->
                    <!--             </Grid> -->
                    <!--         </DataTemplate> -->
                    <!--         <DataTemplate DataType="items:KeyActionDockItem"> -->
                    <!--             <Grid ColumnDefinitions="84,*" RowDefinitions="*"> -->
                    <!--                 <Label -->
                    <!--                     Grid.Row="0" -->
                    <!--                     Grid.Column="0" -->
                    <!--                     Content="行为标识符" /> -->
                    <!--                 <TextBox -->
                    <!--                     Grid.Row="0" -->
