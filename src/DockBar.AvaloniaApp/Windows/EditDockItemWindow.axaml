    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:System"
    xmlns:vm="using:DockBar.AvaloniaApp.ViewModels"
    xmlns:items="clr-namespace:DockBar.DockItem.Items;assembly=DockBar.DockItem"
    xmlns:structs="clr-namespace:DockBar.DockItem.Structs;assembly=DockBar.DockItem"
    Title="{Binding WindowTitle, Mode=OneWay}"
    Width="800"
    Height="450"
    x:DataType="vm:EditDockItemWindowViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:EditDockItemWindowViewModel IsAddMode="True">
            <vm:EditDockItemWindowViewModel.CurrentDockItem>
