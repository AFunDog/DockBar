                </Button>
            </Grid>-->

            <cac:CustomTitleBar
                Title="{Binding $parent[Window].Title}"
                IsMaximizeButtonVisible="False"
                IsMinimizeButtonVisible="False" />

            <Grid
                Name="RootGrid"
                Grid.Row="1"
                Margin="16"
                Background="Transparent"
                ColumnDefinitions="*,*"
                DragDrop.AllowDrop="True">
                <Grid Grid.Column="0" RowDefinitions="*,*">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center" Text="预览" />
                        <Border
                            Margin="16"
                            Padding="16"
                            BorderBrush="{DynamicResource SystemBaseMediumColor}"
                            BorderThickness="4"
                            CornerRadius="16">
                            <!--  将 IsEnabled 设置为 False 以免触发点击操作  -->
                            <controls:DockItemControl
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ShowName="{Binding CurrentDockItem.Name}"
                                DockIcon="{Binding IconData,Converter={x:Static ac:DockItemIconConverter.Instance}}"
                                Width="108" Height="108" />


                        </Border>
                    </StackPanel>

                    <Grid Grid.Row="1" RowDefinitions="*,*">
                        <Grid
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RowDefinitions="*,*">
                            <TextBlock
                                Margin="0,0,0,8"
                                HorizontalAlignment="Center"
                                Text="项目类型" />
                            <!--<TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding DockItemTypeString}" />-->
                            <ComboBox
                                Grid.Row="1"
                                MinWidth="192"
                                HorizontalContentAlignment="Center"
                                ItemsSource="{Binding DockItemTypeStrings}"
                                SelectedIndex="{Binding SelectedDockItemTypeIndex}">
                                <ComboBox.Styles>
                                    <Style Selector="ComboBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </ComboBox.Styles>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="sys:String">
                                        <TextBlock Text="{Binding .}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <!--<ComboBox.Items>
                                    <ComboBoxItem Content="空" />
                                -->
                                <!--<ComboBoxItem Content="未知" />-->
                                <!--
                                    <ComboBoxItem Content="链接项目" />
                                    <ComboBoxItem Content="自定义行为项目" />
                                    <ComboBoxItem Content="文件夹项目" />
                                </ComboBox.Items>-->
                            </ComboBox>
                        </Grid>
                        <Button
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Command="{Binding ConfirmDockItemCommand}"
                            Content="{Binding ConfirmButtonText}"
                            IsDefault="True" />

                    </Grid>


                </Grid>
                <Grid
                    RowDefinitions="Auto,*"
                    Grid.Column="1">
                    <Grid.Styles>
                        <Style Selector="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                        <Style Selector="Label">
                            <Setter Property="VerticalAlignment" Value="Center"></Setter>
                        </Style>
                    </Grid.Styles>
                    <StackPanel Orientation="Vertical" Spacing="4">


                        <TextBlock
                            FontSize="18"
                            Text="属性列表" />
                        <DockPanel>
                            <Label
                                Content="唯一标识符"
                                Target="{Binding #KeyTextBlock}" />
                            <SelectableTextBlock
                                Name="KeyTextBlock"
                                Margin="0,4"
                                Text="{Binding CurrentDockItem.Id}" />
                        </DockPanel>
                        <DockPanel>
                            <Label
                                Content="索引位置"
                                Target="{Binding #IndexNumberTextBlock}" />
                            <SelectableTextBlock
                                Name="IndexNumberTextBlock"
                                Margin="0,4"
                                Text="{Binding Index}" />
                        </DockPanel>

                        <DockPanel LastChildFill="False" HorizontalSpacing="4">
                            <Label Content="项目图标" />
                            <CheckBox
                                Margin="0,0,-4,0"
                                IsChecked="{Binding UseGenerateIcon,Mode=TwoWay}" />
                            <TextBlock Text="（使用自动生成图标）" Margin="-4,0"></TextBlock>
                            <Button
                                IsEnabled="{Binding !UseGenerateIcon,Mode=OneWay}"
                                Command="{Binding OpenIconFileCommand}"
                                Margin="0,4,0,4"
                                Content="选择本地文件" />
                        </DockPanel>
                        <DockPanel HorizontalSpacing="4">
                            <Label
                                Content="展示名称"
                                Target="{Binding #ShowNameTextBox}" />
                            <CheckBox
                                Name="UseGeneratedShowNameCheckBox"
                                Margin="0,0,-4,0"
                                IsChecked="{Binding UseGenerateName, Mode=TwoWay}" />
                            <TextBlock Text="（使用自动生成名称）" Margin="-4,0"></TextBlock>
                            <TextBox
                                HorizontalAlignment="Stretch"
                                Name="ShowNameTextBox"
                                Margin="0,4"
                                IsEnabled="{Binding !UseGenerateName, Mode=OneWay}"
                                Text="{Binding CurrentDockItem.Name, Mode=TwoWay}" />

                        </DockPanel>
                        <DockPanel HorizontalSpacing="4" LastChildFill="False">
                            <Label Content="项目类型" />
                            <ComboBox
                                MinWidth="192"
                                HorizontalContentAlignment="Center"
                                ItemsSource="{Binding DockItemTypeStrings}"
                                SelectedIndex="{Binding SelectedDockItemTypeIndex}">
                                <ComboBox.Styles>
                                    <Style Selector="ComboBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    </Style>
                                </ComboBox.Styles>
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="sys:String">
                                        <TextBlock Text="{Binding .}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <!--<ComboBox.Items>
                                    <ComboBoxItem Content="空" />
                                -->
                                <!--<ComboBoxItem Content="未知" />-->
                                <!--
                                    <ComboBoxItem Content="链接项目" />
                                    <ComboBoxItem Content="自定义行为项目" />
                                    <ComboBoxItem Content="文件夹项目" />
                                </ComboBox.Items>-->
                            </ComboBox>
                        </DockPanel>
                    </StackPanel>
                    <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto">
                        <TextBlock Text="元数据" FontSize="18" Margin="0,0,0,16"></TextBlock>
                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding MetadataView}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" Spacing="8"></StackPanel>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="vm:EditMetadata">
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                            <TextBlock Grid.Column="0" Text="{Binding Key,Mode=OneWay}" IsVisible="{Binding !CanKeyEdit}"></TextBlock>
                                            <TextBox Grid.Column="0"
                                                     IsVisible="{Binding CanKeyEdit}"
                                                     Text="{Binding Key   ,UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBox Grid.Column="1"
                                                     Text="{Binding Value, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                            <Button Grid.Column="2"
                                                    IsVisible="{Binding CanRemove}"
                                                    CommandParameter="{Binding Key}"
                                                    Command="{Binding ((vm:EditDockItemWindowViewModel)DataContext).RemoveMetadataCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    >
                                                <LucideIcon Kind="X" Margin="-2" Foreground="Red"></LucideIcon>
                                            </Button>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <StackPanel Grid.Row="2" Spacing="8">
                            <Button Content="添加元数据" Command="{Binding AddMetadataCommand}"></Button>
                        </StackPanel>
                    </Grid>

